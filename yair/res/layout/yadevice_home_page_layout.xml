<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/eair_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/yabg_standby"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip" >

        <ImageView
            android:layout_width="100dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:src="@drawable/yalogo4" />

        <TextView
            android:id="@id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:text="@string/get_weather"
            android:textColor="#ffffffff"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/layout"
        android:layout_width="fill_parent"
        android:layout_height="145.0dip"
        android:layout_gravity="center"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/yatop_frame"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@id/lock"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lockh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dip" >

                <TextView
                    android:id="@+id/lockg"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:background="@drawable/yalock" />

                <ImageView
                    android:id="@+id/lockfx"
                    android:layout_width="wrap_content"
                    android:layout_height="25dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/yalockleft" />

                <TextView
                    android:id="@+id/lockk"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/yalockkd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:layout_marginTop="20dip"
                    android:gravity="center"
                    android:text="@string/lockbutton"
                    android:textColor="@color/color_white" />
            </LinearLayout>
        </LinearLayout>
        <!-- 风量开始 -->

        <LinearLayout
            android:id="@id/wind"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@id/poweron"
                    android:layout_width="55dip"
                    android:layout_height="55dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/yapower" />

                <View
                    android:layout_width="20dip"
                    android:layout_height="1dip" />

                <LinearLayout
                    android:layout_width="200dip"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dip"
                        android:text="@string/windlev"
                        android:textColor="@color/color_white"
                        android:textSize="16dip" />

                    <LinearLayout
                        android:layout_width="200dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="20dip" >

                        <TextView
                            android:id="@+id/gd"
                            android:layout_width="45dip"
                            android:layout_height="25dip"
                            android:layout_marginBottom="10dip"
                            android:background="@drawable/yawindbg"
                            android:gravity="center"
                            android:text="@string/gd"
                            android:textColor="@color/color_fontblue" />

                        <TextView
                            android:id="@+id/zd"
                            android:layout_width="45dip"
                            android:layout_height="25dip"
                            android:gravity="center"
                            android:text="@string/zd"
                            android:textColor="@color/color_fonth" />

                        <TextView
                            android:id="@+id/dd"
                            android:layout_width="45dip"
                            android:layout_height="25dip"
                            android:gravity="center"
                            android:text="@string/dd"
                            android:textColor="@color/color_fonth" />

                        <TextView
                            android:id="@+id/jy"
                            android:layout_width="45dip"
                            android:layout_height="25dip"
                            android:gravity="center"
                            android:text="@string/jy"
                            android:textColor="@color/color_fonth" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/yalock"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@drawable/yalock" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <ImageView
                    android:id="@+id/swind"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@drawable/yak" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <ImageView
                    android:id="@+id/motor"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@drawable/yawind" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <ImageView
                    android:id="@+id/yatime"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@drawable/yatime" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="10dp" />

                <ImageView
                    android:id="@+id/anion"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@drawable/yajj" />
            </LinearLayout>
        </LinearLayout>

        <!-- 风量结束 -->
        <!-- 定时开始 -->

        <LinearLayout
            android:id="@+id/timer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/timerback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_marginLeft="20dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/yatimeback" />

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="50dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="10dip"
                        android:text="@string/back"
                        android:textColor="@color/color_white"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@id/alert_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dip"
                    android:layout_marginTop="33.0dip"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/timer"
                    android:textColor="@color/color_white"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <!--
                    <Button
                        android:id="@id/btn_left"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:background="@drawable/yaleft" />

                    <Gallery
                        android:id="@id/timer_gallery"
                        android:layout_width="150.0dip"
                        android:layout_height="wrap_content"
                        android:unselectedAlpha="0.8" />

                    <Button
                        android:id="@id/btn_right"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:background="@drawable/yaright"/>
                    -->

                    <TextView
                        android:id="@+id/ltimer"
                        android:layout_width="45dip"
                        android:layout_height="25dip"
                        android:background="@drawable/yawindbg"
                        android:gravity="center"
                        android:text="@string/time_0"
                        android:textColor="@color/color_fontblue" />

                    <TextView
                        android:id="@+id/ytimer"
                        android:layout_width="45dip"
                        android:layout_height="25dip"
                        android:gravity="center"
                        android:text="@string/time_1"
                        android:textColor="@color/color_fonth" />

                    <TextView
                        android:id="@+id/stimer"
                        android:layout_width="45dip"
                        android:layout_height="25dip"
                        android:gravity="center"
                        android:text="@string/time_4"
                        android:textColor="@color/color_fonth" />

                    <TextView
                        android:id="@+id/btimer"
                        android:layout_width="45dip"
                        android:layout_height="25dip"
                        android:gravity="center"
                        android:text="@string/time_8"
                        android:textColor="@color/color_fonth" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25.0dip"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/hour"
                    android:textColor="@color/color_white"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- 定时结束 -->
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@id/err_icon"
                    android:layout_width="45.0dip"
                    android:layout_height="45.0dip"
                    android:layout_gravity="right"
                    android:layout_margin="10.0dip"
                    android:src="@drawable/yawarn_icon" />

                <FrameLayout
                    android:layout_width="230.0dip"
                    android:layout_height="230.0dip"
                    android:layout_gravity="center"
                    android:layout_marginTop="5.0dip"
                    android:background="@drawable/yacircle" >

                    <View
                        android:id="@id/run_progress"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/yapoint"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@id/open_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@id/eair_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yamode_night_icon"
                            android:textColor="#ffffffff"
                            android:textSize="50.0sp" />

                        <TextView
                            android:id="@id/eair_run_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1.0dip"
                            android:text="@string/mode_night"
                            android:textColor="#ffffffff"
                            android:textSize="16.0sp" />
                    </LinearLayout>
                </FrameLayout>
            </FrameLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@id/weather_info_layout"
                    android:layout_width="0dip"
                    android:layout_height="65.0dip"
                    android:layout_marginLeft="30dip"
                    android:layout_weight="1"
                    android:background="@drawable/yahome_frame"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@id/pm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:textColor="#ffffffff"
                        android:textSize="14.0sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@id/location_pm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/get_weather"
                            android:textColor="#ffffffff"
                            android:textSize="25.0sp" />

                        <TextView
                            android:id="@id/pm_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.0dip"
                            android:textColor="#ffffffff"
                            android:textSize="14.0sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="30dip"
                    android:layout_height="3dip" />

                <LinearLayout
                    android:id="@id/filter_info_layout"
                    android:layout_width="0dip"
                    android:layout_height="65.0dip"
                    android:layout_marginRight="30dip"
                    android:layout_weight="1"
                    android:background="@drawable/yahome_frame"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_info"
                        android:textColor="#ffffffff"
                        android:textSize="14.0sp" />

                    <ImageView
                        android:id="@id/filter_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/yainfo" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>